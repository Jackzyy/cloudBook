/* pages/article/article.wxss */

.article {
  padding: 0 10px;
  margin-bottom: 65rpx;
}

.article .footer{
  width: 100%;
  height: 70rpx;
  padding: 5px 0;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}

.article .footer .iconfont{
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin:10rpx auto;
}

.article .footer .iconfont image {
  font-size: 44rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 100rpx;
  text-align: center;
}

.catalog-menu {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 90rpx;
  background: #fff;
  border: 1px solid #f1f1f1;
  z-index: 996;
  width: 680rpx;
  transform: translate3d(-100%, 0, 0);
  transition: transform .3s ease; 
}

.active {
  transform: translate3d(0, 0, 0)
}

.catalog-item{
  font-size: 14px;
  color: #333;
  line-height: 70rpx;
  height: 70rpx;
  padding-left: 20rpx;
}

.catalog-item:active{
  background: #f1f1f1;
}

/* 幕布 */
.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 90rpx;
  left: 0;
  z-index: 888;
  background: rgba(0, 0, 0, .2);
}
