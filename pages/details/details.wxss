/* pages/details/details.wxss */

.details .book-details {
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom: 4rpx solid #888;
}

.book-t {
  display: flex;
}

.book-t .img {
  width: 220rpx;
  height: 260rpx;
}

.book-t .title {
  color: #333;
  font-weight: 700;
  font-size: 28rpx;
}

.book-t .main-msg {
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
  color: #555;
  font-size: 24rpx;
}

.book-b {
  margin: 40rpx auto 30rpx;
  display: flex;
  justify-content: space-between;
}

.book-b .btn {
  margin: 0;
  width: 300rpx;
  background: #e9e9e9;
  border: none;
  color: #444;
  font-size: 24rpx;
}
.book-desc{
  padding:20rpx;
}

.book-desc .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 40rpx;
}

.book-desc .desc-main {
  font-size: 24rpx;
}

.book-catalog {
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid #f1f1f1;
  border-bottom: 10rpx solid #f1f1f1;
  line-height: 100rpx;
  font-size: 24rpx;
  height: 100rpx;
  padding: 0 20rpx;
  color: #555;
}

.book-catalog .title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.book-btn-wrap {
  position: fixed;
  bottom: 12px;
  left: 12px;
  border-radius:5px;
  text-align: center;
  text-decoration: none;
  margin: 0;
  background: #409eff;
  color: #fff;
  font-size: 24rpx;
  height: 60rpx;
  width: 710rpx;
}
